<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="test.jaiboondemand.SignUp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ต้องระบุบทุกช่อง"/>
  <EditText
      android:id="@+id/user_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:background="@drawable/transparan_mode"
      android:drawablePadding="10dp"
      android:gravity="center"
      android:hint="FullName"
      android:textColor="@color/colorPrimary"
      android:textColorHint="@color/light_blue"
      android:layout_marginTop="5dp"
      android:singleLine="true"
      />
    <EditText
        android:id="@+id/email_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:background="@drawable/transparan_mode"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:hint="Email"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/light_blue"
        android:layout_marginTop="5dp"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/pass_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_users"
        android:background="@drawable/transparan_mode"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:hint="Password"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/light_blue"
        android:layout_marginTop="5dp"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/Con_passuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:background="@drawable/transparan_mode"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:hint="Con-Password"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/light_blue"
        android:layout_marginTop="5dp"
        android:singleLine="true"/>
    <CheckBox
        android:id="@+id/recive_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You want to recive news to your email ?"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You accept"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accept_policy"
            android:layout_marginLeft="5dp"
            android:text="Our policy ?"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnsuccess_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@drawable/transparan_mode"/>

</LinearLayout>
