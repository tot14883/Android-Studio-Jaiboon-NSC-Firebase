<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.jaiboondemand.must_product.NeedProduct">
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight=".7">
   <android.support.v7.widget.RecyclerView
       android:id="@+id/recycle_need_donate"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </android.support.v7.widget.RecyclerView>
   </LinearLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="0.1"
       >
      <TextView
          android:id="@+id/total_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:text="ราคารวม :"
          android:textSize="20dp"/>
      <TextView
          android:id="@+id/total_price_donate"
          android:layout_toLeftOf="@+id/bath_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0"
          android:textSize="20dp"
          android:layout_marginRight="5dp"
          />

      <TextView
          android:id="@+id/bath_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="บาท"
          android:layout_alignParentRight="true"
          android:textSize="20dp" />
      <Button
          android:id="@+id/btn_donate"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="DONATE"
          android:layout_below="@id/total_price_donate"
          android:onClick="Donate_Click">
      </Button>
   </RelativeLayout>
</LinearLayout>
