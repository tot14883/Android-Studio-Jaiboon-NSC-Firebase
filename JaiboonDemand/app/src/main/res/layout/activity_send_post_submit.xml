<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.jaiboondemand.Deposit.SendPostSubmit">
   <TextView
       android:text="ที่อยู่ในการฝากส่งสิ่งของบริจาค"
       android:gravity="center"
       android:textSize="20sp"
       android:textStyle="bold"
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/local_admin"
        android:layout_marginTop="16dp"
        android:text="Local"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_main_deposit"
        android:onClick="Button_main_Deposit"
        android:text="กลับสู่หน้าหลัก"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
